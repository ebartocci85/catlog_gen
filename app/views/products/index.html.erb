<p id="notice"><%= notice %></p>

<p>
  <%= link_to("Generate PDF", generate_catalog_path) %>
</p>


<%=render "products_table" %>

<%= link_to 'New Product', new_product_path,class:"btn btn-primary" %>

<hr>

<div class="album text-muted">
  <div class="container">

    <div class="row">
         <% @products.each do |product| %>
          <div class="card">
            <%= display_image_for_product(product) %>
            <strong class="card-text">SKU: <%= product.sku %></strong>
            <p class="card-text">Retail: <%= product.retail %></p>
            <p class="card-text">Wholesale: <%= product.wholesale %></p>
            <p class="card-text">UPC: <%= product.upc %></p>
            <p class="card-text">Collection: <%= product.collection %></p>
         </div>
        <% end %>
      </div>
   </div>
</div>
