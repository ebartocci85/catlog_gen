<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Upc</th>
      <th>Sku</th>
      <th>Brand</th>
      <th>Size</th>
      <th>Currency</th>
      <th>Retail</th>
      <th>Wholesale</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.upc %></td>
        <td><%= product.sku %></td>
        <td><%= product.brand %></td>
        <td><%= product.size %></td>
        <td><%= product.currency %></td>
        <td><%= product.retail %></td>
        <td><%= product.wholesale %></td>
        <td><%= product.img_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

